<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Spellbook", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new {@class = "nav-item nav-link"})</li>
                    <li>@Html.ActionLink("About", "About", "Home", null, new {@class = "nav-item nav-link"})</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new {@class = "nav-item nav-link"})</li>
                    <li>@Html.ActionLink("Log In", "Login", "Account", null, new { @class = "nav-item nav-link" })</li>
                    <li>@Html.ActionLink("Log Out", "LogOut", "Account", null, new {@class = "nav-item nav-link"})</li>
                    <li>@ViewBag.Message</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
