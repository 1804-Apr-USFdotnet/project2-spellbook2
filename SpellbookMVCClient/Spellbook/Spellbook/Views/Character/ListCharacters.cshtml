@model IEnumerable<Spellbook.Models.Character>

@{
    ViewBag.Title = "ListCharacters";
}

<h2>All Characters</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Level)
        </th>
        <th>
            Spellbook
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id = item.CharacterId}, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Level)
        </td>
        <td>
            @Html.ActionLink(item.Spellbook.Name, "Details", "Spellbook", new { id = item.Spellbook.SpellListId}, null)
        </td>
    </tr>
}

</table>
